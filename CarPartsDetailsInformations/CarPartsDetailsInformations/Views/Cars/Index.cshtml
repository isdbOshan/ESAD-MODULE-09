@model IEnumerable<CarPartsDetailsInformations.Models.Categorie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-12">
        <h3>Candidates</h3>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create", "Create", "Cars", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th></th>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr id="tr_@c.CategoryId" style="vertical-align:middle">
                        <td>@c.CategoryName</td>
                        <td>@c.Description</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Candidates", new { id = c.CategoryId }, new { @class = "btn btn-primary btn-sm" })
                            @Ajax.ActionLink("Delete", "Delete", new { id = c.CategoryId },
                           new AjaxOptions { Confirm = "Are youre to delele?\nRelated data will also be deleted", HttpMethod = "Post", OnSuccess = "onSuccess" },
                           new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td colspan="6">
                            <h4>Vehicle Information</h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Launch</th>
                                        <th>Stock</th>
                                        <th>Picture</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var q in c.Vehicles)
                                    {
                                        <tr>
                                            <td>@q.VehicleName</td>
                                            <td>@q.Price.ToString("0.00")</td>
                                            <td>@q.MakeYear</td>
                                            <td>@q.IsStock</td>
                                            <td>
                                                <img class="rounded-circle" src="~/Pictures/@q.Picture" style="width:40px" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>